<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5">

  <display-name>Welcome to Tomcat</display-name>
  <description>
     Welcome to Tomcat
  </description>
  
  <servlet>
        <servlet-name>default</servlet-name>
        <servlet-class>com.HelloServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/SearchEngine/default</url-pattern>
    </servlet-mapping>
    
<servlet>
        <servlet-name>InsertDocument</servlet-name>
        <servlet-class>com.InsertDocument</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>InsertDocument</servlet-name>
        <url-pattern>/SearchEngine/InsertDocument</url-pattern>
    </servlet-mapping>

<servlet>
        <servlet-name>SearchDocument</servlet-name>
        <servlet-class>com.SearchDocument</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SearchDocument</servlet-name>
        <url-pattern>/SearchEngine/SearchDocument</url-pattern>
    </servlet-mapping>

<servlet>
        <servlet-name>DeleteDocument</servlet-name>
        <servlet-class>com.DeleteDocument</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteDocument</servlet-name>
        <url-pattern>/SearchEngine/DeleteDocument</url-pattern>
    </servlet-mapping>
    
</web-app>